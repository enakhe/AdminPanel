@{
    ViewData["Title"] = "Users";
    Layout = "_Dashboard";
    var errorMessage = ViewData["ErrorMessage"] as string;
}

@using AdminPanel.InputModel
@model UserViewModel

<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Create a new user</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/">Home</a></li>
                        <li class="breadcrumb-item"><a href="/Admin/Index">Dashboard</a></li>
                        <li class="breadcrumb-item active">Course</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    <section class="content">
        <div class="container-fluid">
            @{
                if(!string.IsNullOrEmpty(@errorMessage))
                {
                    <partial name="_StatusMessage" for=@errorMessage />
                }
            }
            <div class="d-flex justify-content-center align-items-center">
                <div class="col-md-10">
                    <div class="card">
                        <div class="card-header bg-dark">
                            <h3 class="card-title text-light">User | Create</h3>

                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                                    <i class="fa-solid fa-minus text-light"></i>
                                </button>
                            </div>
                        </div>
                        <div class="card-body">
                            <form id="createForm needs-validation" novalidate enctype="multipart/form-data" method="post">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group has-validation">
                                    <label for="courseTitle">Username</label>
                                    <input type="text" placeholder="Username" asp-for="@Model.Username" aria-required="true" class="form-control shadow-none">
                                    <p class="my-1">
                                        <i id="usernameIcon"></i><span id="usernameOutput"></span>
                                    </p>
                                </div>
                                <div class="form-group">
                                    <label for="courseCode">First name</label>
                                    <input type="text" placeholder="First name" asp-for="@Model.FirstName" aria-required="true" class="form-control shadow-none">
                                </div>
                                <div class="form-group">
                                    <label for="courseDuration">Last name</label>
                                    <input type="text" placeholder="Last name" asp-for="@Model.LastName" aria-required="true" class="form-control shadow-none">
                                </div>
                                <div class="form-group">
                                    <label for="courseAmount">Password</label>
                                    <input type="text" placeholder="Password" asp-for="@Model.Password" aria-required="true" class="form-control shadow-none">
                                    <div id="password-message" class="py-2">
                                        <p id="char"><i id="charIcon"></i> Password must be more than 6 characters</p>
                                        <p id="num"><i id="numIcon"></i> Password must be include number</p>
                                        <p id="alp"><i id="alpIcon"></i> Password must be include special characters</p>
                                    </div>
                                </div>
                                <button type="submit" class="w-100 btn btn-lg btn-success">Save</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>