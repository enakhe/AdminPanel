@model AdminPanel.Models.CreatedUser;
@using AdminPanel.Models;

@{
    ViewData["Title"] = "Users";
    Layout = "_Dashboard";
    var errorMessage = ViewData["ErrorMessage"] as string;
}

<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Edit @Model.Username</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="/">Home</a></li>
                        <li class="breadcrumb-item"><a href="/Admin/Index">Dashboard</a></li>
                        <li class="breadcrumb-item active">Edit</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    <section class="content">
        <div class="container-fluid">
            @{
                if (!string.IsNullOrEmpty(@errorMessage))
                {
                    <div class="my-3">
                        <partial name="_StatusMessage" for=@errorMessage />
                    </div>
                }
            }
            <div class="d-flex justify-content-center my-3 align-items-center">
                <div class="col-md-10">
                    <div class="card">
                        <div class="card-header bg-dark">
                            <h3 class="card-title text-light">User | Delete</h3>

                            <div class="card-tools">
                                <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                                    <i class="fa-solid fa-minus text-light"></i>
                                </button>
                            </div>
                        </div>
                        <div class="card-body">
                            <form id="createForm needs-validation" asp-area="" asp-controller="User" asp-action="DeleteUser" asp-route-id="@Model.Id" novalidate enctype="multipart/form-data" method="post">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="card">
                                    <div class="card-header bg-warning text-light">
                                        <h6 class="text-light">
                                            <i class="fa-solid fa-triangle-exclamation"></i> <span></span>Are you sure you want to delete this user?
                                        </h6>
                                    </div>
                                    <div class="card-body">
                                        <h5> Full name: 
                                            @{
                                                @Model.FirstName <span> @Model.LastName</span>
                                            }
                                        </h5>
                                        <p class="card-text m-0"><span class="fw-semibold">Username:</span> @Model.Username</p>
                                        <p class="card-text m-0"><span class="fw-semibold">Date created:</span> @Model.DateCreated.ToString("MMM dd yyyy")</p>
                                        <div class="row my-3">
                                            <div class="col-md-6 center">
                                                <button type="submit" class="btn btn-lg btn-danger">Delete</button>
                                            </div>
                                            <div class="col-md-6 center">
                                                <a asp-area="" asp-controller="User" asp-action="Index" class="btn btn-lg btn-success">Cancel</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
